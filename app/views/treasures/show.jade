extends ../shared/template
block content
  .row
    .col-xs-6
      h3= treasure.loc.name
      #map
      h2= treasure.tname
      #photo
    .col-xs-6
      table.table.table-striped.table-hover.table-responsive
        thead
          tr
            th Hint
        tbody
          tr(data-name= treasure.loc.name, data-lat= treasure.loc.lat, data-lng= treasure.loc.lng)
            td= treasure.hint
  .row
    .col-xs-12
      form(method='post', action='/treasures/#{treasure._id}')
        button#found Found It!
block scripts
  script(src='/js/user/show-treasures.js')
